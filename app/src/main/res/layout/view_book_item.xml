<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp">
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true"
            android:src="@drawable/ic_book_cover"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:paddingStart="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="剑圣出关之血战大魔头"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/book_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="9.1"
                    android:textColor="#FF5722"/>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:textSize="16dp"
                    android:gravity="bottom"
                    android:text="分"
                    android:textColor="#FF5722"/>
            </LinearLayout>
            <TextView
                android:id="@+id/book_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="简介简介简介简介简介简介简介简介简介简介"
                android:maxLines="2"
                android:textSize="12dp"
                android:textColor="#666666"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/book_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="完结·498万字·东方玄幻"
                    android:textColor="#666666"/>
                <ImageButton
                    android:id="@+id/feedback_button"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:scaleType="fitEnd"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_cross"
                    android:contentDescription="notInterested"/>
            </LinearLayout>
            <Button
                android:id="@+id/book_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                style="@style/CustomButtonStyle"
                android:stateListAnimator="@null"
                android:text="玄幻类热搜榜第6名"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>
</merge>